{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*/index.ts",
        "./src/*"
      ]
    },
    "typeRoots": [
      "@types",
      "@/@types"
    ],
  },
}